<Window x:Class="StockTicker.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About BitTicker" Height="350" Width="450"
		WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        ResizeMode="NoResize">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="BitTicker" 
                   Foreground="White" FontSize="28" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,5"/>
				   
		<TextBlock Grid.Row="1" x:Name="VersionTextBlock" 
				   Foreground="#CCCCCC" FontSize="14" 
				   HorizontalAlignment="Center" Margin="0,0,0,15"/>
					

        <TextBlock Grid.Row="2" Text="Real-time cryptocurrency ticker with CoinMarketCap API" 
                   Foreground="White" FontSize="12" 
                   HorizontalAlignment="Center" 
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <Separator Grid.Row="3" Background="#333333" Height="1" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Author: " Foreground="#CCCCCC" FontSize="11"/>
            <TextBlock Text="Hugo Monteiro" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
        </StackPanel>

        <TextBlock Grid.Row="5" 
                   HorizontalAlignment="Center" 
                   FontSize="10" 
                   Foreground="#CCCCCC"
                   Margin="0,0,0,15">
            <Run Text="Copyright Â© 2025 Hugo Monteiro"/>
        </TextBlock>

        <TextBlock Grid.Row="6" 
                   HorizontalAlignment="Center" 
                   FontSize="10" 
                   Foreground="#CCCCCC"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Margin="0,0,0,10">
            <Run Text="Licensed under the MIT License"/>
            <LineBreak/>
            <Run Text="Built with WPF and .NET 6"/>
        </TextBlock>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="View License" 
                    Width="90" Height="30" Margin="0,0,10,0"
                    Background="#333333" Foreground="White" 
                    BorderBrush="#555555" 
                    Click="ViewLicense_Click"/>
            <Button Content="OK" 
                    Width="80" Height="30"
                    Background="#0078D4" Foreground="White" 
                    BorderBrush="#0078D4" 
                    Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>
